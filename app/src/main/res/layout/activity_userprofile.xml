<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nimra.newsdroid.userprofile">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:textSize="30dp"
        android:textAlignment="center"
        android:background="#dd4739"
        android:id="@+id/textView6" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:text="Logout" />

    <ImageView
        android:id="@+id/userimage"
        android:layout_width="150dp"
        android:layout_marginLeft="16dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Name"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/useremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username"
        android:layout_below="@+id/username"
        android:text="Email"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/usercity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userphone"
        android:layout_toEndOf="@+id/userimage"
        android:layout_toRightOf="@+id/userimage"
        android:text="City"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/userphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/useremail"
        android:layout_alignStart="@+id/useremail"
        android:layout_below="@+id/useremail"
        android:text="phone"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/userimage"
        android:layout_marginBottom="197dp"
        android:text="All News"
        android:textSize="15dp"
        android:layout_alignLeft="@+id/userimage"
        android:id="@+id/upload"/>

</RelativeLayout>
