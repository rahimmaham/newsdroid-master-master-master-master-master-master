<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nimra.newsdroid.AdminProfile"
    tools:showIn="@layout/app_bar_admin_profile"
    android:background="#fff">



    <ImageView
        android:id="@+id/userimage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:src="@drawable/profile" />

    <TextView
        android:textColor="#000"
        android:background="#fff"
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Name"
        android:textSize="20sp" />

    <TextView
        android:background="#fff"
        android:textColor="#000"
        android:id="@+id/useremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Email"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/usercity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username"
        android:layout_below="@+id/useremail"
        android:layout_marginTop="18dp"
        android:background="#fff"
        android:text="City"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/userphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/usercity"
        android:layout_alignStart="@+id/usercity"
        android:layout_below="@+id/usercity"
        android:layout_marginTop="25dp"
        android:background="#fff"
        android:text="Phone"
        android:textColor="#000"
        android:textSize="20sp" />

</RelativeLayout>
