<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nimra.newsdroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="News Spot"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login" />
        <activity android:name=".splash"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserNewsFeed"
            android:label="@string/title_activity_user_news_feed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyProfile"
            android:label="@string/title_activity_my_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewsAdd"
            android:label="@string/title_activity_news_add"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AdminNewsFeed"
            android:label="@string/title_activity_admin_news_feed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AdminProfile"
            android:label="@string/title_activity_admin_profile"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>